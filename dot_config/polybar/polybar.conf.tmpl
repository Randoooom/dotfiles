font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = Font Awesome 6 Free Solid:style=Solid;1
font-4 = Font Awesome 6 Free Regular:style=Regular;1
font-5 = Font Awesome 6 Brands Regular:style=Regular;1
font-6 = Roboto:style=bold;1
font-7 = Roboto:size=10;1

modules-center = date
{{- if eq .chezmoi.hostname "random-xps" }}
modules-right = backlight
{{- end }}

tray-position = none
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

